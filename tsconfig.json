{
  "compilerOptions": {
    "target": "ES2020",
    "module": "EsNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "outDir": "./dist/",
    "baseUrl": "./",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": true,
    "noPropertyAccessFromIndexSignature": true,
    "isolatedModules": true
  },
  "include": [
    "eslint.customRule.ts",
    "global.d.ts",
    "vite.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "file/input/**/*.ts",
    "file/input/**/*.tsx"
  ],
  "exclude": ["dist", "node_modules", "public", "src-tauri"]
}
