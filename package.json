{
    "name": "@cimo/jidou",
    "version": "1.0.0",
    "description": "Automatic interaction system.",
    "author": "cimo",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/cimo/jidou.git"
    },
    "scripts": {
        "preinstall": "([ ! -f package-lock.json ] && npm install --package-lock-only --ignore-scripts --no-audit); npx --yes npm-force-resolutions",
        "sass": "sass --watch ./src/style/main.scss ./public/css/main.css",
        "check": "eslint . --fix",
        "execute": "nodemon --config nodemon.json",
        "start": "npx electron . --no-sandbox",
        "build": "npm run check && tsc --build -clean && tsc --build tsconfig.build.json && npx electron-builder --dir --windows --x64"
    },
    "appId": "com.cimo.jidou",
    "productName": "Runtime Broker",
    "main": "./dist/index.js",
    "build": {
        "directories": {
            "buildResources": "./public/",
            "output": "./build/"
        },
        "files": [
            "./public/**/*",
            "./dist/**/*"
        ],
        "linux": {
            "icon": "./public/image/logo.png"
        },
        "win": {
            "icon": "./public/image/logo.ico"
        }
    },
    "dependencies": {
        "@nut-tree/nut-js": "3.1.2"
    },
    "devDependencies": {
        "@types/node": "18.14.4",
        "@typescript-eslint/eslint-plugin": "5.54.0",
        "@typescript-eslint/parser": "5.54.0",
        "eslint": "8.35.0",
        "eslint-config-prettier": "8.8.0",
        "eslint-plugin-prettier": "4.2.1",
        "prettier": "2.8.7",
        "sass": "1.57.1",
        "typescript": "4.9.4",
        "nodemon": "2.0.21",
        "electron": "26.2.0",
        "electron-builder": "24.6.4"
    },
    "resolutions": {
        "node-fetch": "2.6.7",
        "**/node-fetch": "2.6.7"
    }
}
