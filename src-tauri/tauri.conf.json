{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "app_jidou",
    "version": "1.0.0",
    "identifier": "com.node.app-jidou",
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "Jidou",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:30001",
        "beforeDevCommand": "npm run vite_dev",
        "beforeBuildCommand": "npm run vite_build"
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "signCommand": "bash /home/app/script/tauri_windows_sign.sh"
        }
    }
}
