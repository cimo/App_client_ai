{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": ["main"],
    "permissions": [
        "core:default",
        "opener:default",
        {
            "identifier": "http:default",
            "allow": [
                {
                    "url": "http://host.docker.internal:1046/*"
                },
                {
                    "url": "https://host.docker.internal:1046/*"
                },
                {
                    "url": "http://localhost:1046/*"
                },
                {
                    "url": "https://localhost:1046/*"
                }
            ],
            "deny": []
        }
    ]
}
