{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": ["main"],
    "permissions": [
        "core:default",
        "core:window:allow-destroy",
        "core:window:allow-close",
        "log:default",
        "dialog:allow-open",
        "dialog:default",
        "fs:allow-read-file",
        "fs:allow-document-read",
        "fs:allow-picture-read",
        "fs:allow-video-read",
        "fs:allow-audio-read",
        "opener:default",
        {
            "identifier": "http:default",
            "allow": [
                {
                    "url": "http://host.docker.internal:1046/*"
                },
                {
                    "url": "https://host.docker.internal:1046/*"
                },
                {
                    "url": "http://host.docker.internal:1047/*"
                },
                {
                    "url": "https://host.docker.internal:1047/*"
                }
            ],
            "deny": []
        }
    ]
}
